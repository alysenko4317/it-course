<IfModule mod_rewrite.c>
    RewriteEngine On

    # Ensure the base path is correct if your project is in a subfolder (e.g., /it-proj)
    RewriteBase /it-proj/

    # Don't rewrite requests for existing files
    RewriteCond %{REQUEST_FILENAME} !-f

    # Don't rewrite requests for existing directories
    RewriteCond %{REQUEST_FILENAME} !-d

    # Redirect all other requests to index.php for routing by the application
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>
